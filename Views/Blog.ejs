<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%- include('./Partials/Head.ejs') %>

        <title>
            <%= blog.title %>
        </title>
</head>

<body>

    <%- include('./Partials/Nav.ejs') %>

        <!-- Main Container -->
        <div class="container my-5">

            <div class="row justify-content-center">

                <div class="col-lg-9 col-md-11">

                    <!-- Blog Card -->
                    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">

                        <!-- Blog Image -->
                        <img src="<%= blog.coverImg %>" class="card-img-top"
                            style="max-height: 420px; object-fit: cover;" alt="Blog Image" />

                        <!-- Content -->
                        <div class="card-body p-4 p-md-5">

                            <!-- Title -->
                            <h1 class="fw-bold mb-3 text-center">
                                <%= blog.title %>
                            </h1>

                            <!-- Date -->
                            <div class="text-center text-muted mb-4">
                                <small>
                                    Published on
                                    <%= new Date(blog.createdAt).toDateString() %>
                                </small>
                            </div>

                            <!-- Author Section -->
                            <div class="d-flex align-items-center gap-3 p-3 mb-4 border rounded shadow-sm">

                                <!-- Profile Image -->
                                <img src="<%= '/images/default.png' %>" width="55" height="55"
                                    class="rounded-circle border" alt="Author">

                                <!-- Name -->
                                <div>
                                    <small class="text-muted">Created by</small>
                                    <h6 class="mb-0 fw-semibold">
                                        <%= blog.createdBy?.fullName || 'Unknown User' %>
                                    </h6>
                                </div>

                            </div>

                            <!-- Blog Body -->
                            <p class="fs-5 lh-lg text-secondary" style="text-align: justify;">
                                <%= blog.body %>
                            </p>

                            <!-- Divider -->
                            <hr class="my-4">

                            <!-- Footer Buttons -->
                            <div class="d-flex justify-content-between align-items-center">

                                <a href="/" class="btn btn-outline-secondary">
                                    ‚Üê Back to Home
                                </a>

                                <span class="badge bg-primary fs-6">
                                    Blog
                                </span>

                            </div>

                        </div>

                        <div class="container mt-4 mb-4">
                            <h1>Comments(<%=comments.length  %>)</h1>
                            <% if (locals.user) { %>

                                <form action="/blog/comment/<%= blog._id %>" method="POST">
                                    <input type="text" class="form-control" name="content" id="comment"
                                        placeholder="Write a comment..." required>

                                    <button type="submit" class="mt-3 btn btn-secondary">
                                        Submit
                                    </button>
                                </form>

                                <% } %>

                                <div class="container mt-2">
                                    <% comments.forEach(comment => { %>
                                        <img src="<%= '/images/default.png' %>" width="25" height="25"
                                    class="rounded-circle border" alt="Author"><span>

                                        <p><%= comment.createdBy.fullName  %></p>
                                    </span>
                                </img>
                                    <p><%= comment.content  %></p>
                                     
                                    <% }) %>


                                </div>


                        </div>

                    </div>

                </div>

            </div>

        </div>

        <%- include('./Partials/Script.ejs') %>

</body>

</html>